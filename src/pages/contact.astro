---
import BaseLayouts from "../layouts/BaseLayouts.astro"
---
<BaseLayouts title="Contacto">
      <h1>Contacto</h1>
      <form>
        <label>
          Nombre:<br />
          <input type="text" name="name" />
        </label><br /><br />
        <label>
          Email:<br />
          <input type="email" name="email" />
        </label><br /><br />
        <label>
          Mensaje:<br />
          <textarea name="message"></textarea>
        </label><br /><br />
        <button type="submit">Enviar</button>
      </form>



    <style>
        form {
          display: flex;
          flex-direction: column;
          align-items: center;
          width: 100%;
          max-width: 800px;
          margin: 0 auto;
        }
  
        input, textarea {
          width: 100%;
          padding: 0.2rem;
          margin-top: 0.25rem;
          box-sizing: border-box;
        }
  
        button {
          display: block;  
          margin: 1rem;
          padding: 0.5rem 1rem;
          cursor: pointer;
        }
    </style>
    
</BaseLayouts>